<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- 画面中央の抽象的なテレビと信号のイメージ -->
    
    <!-- テレビのスクリーン（ぼんやりとした光を表現） -->
    <path
        android:pathData="M30,35 h48 v38 h-48 z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="54"
                android:centerY="54"
                android:gradientRadius="30"
                android:type="radial">
                <item android:offset="0" android:color="#2200E5FF" />
                <item android:offset="1" android:color="#0000E5FF" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- メインのシンボル：リモコンと電波の融合 -->
    <!-- 外側の円弧（信号） -->
    <path
        android:strokeColor="#00E5FF"
        android:strokeWidth="2.5"
        android:strokeLineCap="round"
        android:pathData="M44,42 q10,-8 20,0" />
    <path
        android:strokeColor="#00E5FF"
        android:strokeWidth="2.5"
        android:strokeLineCap="round"
        android:pathData="M39,47 q15,-12 30,0" />

    <!-- リモコンの形状（ミニマルなラインアート） -->
    <path
        android:fillColor="#FFFFFF"
        android:pathData="M48,52 h12 q2,0 2,2 v24 q0,2 -2,2 h-12 q-2,0 -2,-2 v-24 q0,-2 2,-2 z" />
    
    <!-- リモコン上のアクセントボタン -->
    <path
        android:fillColor="#00E5FF"
        android:pathData="M52,56 h4 v4 h-4 z" />
    
    <!-- テレビの下部ライン（薄型を強調） -->
    <path
        android:fillColor="#44FFFFFF"
        android:pathData="M28,75 h52 v1 h-52 z" />

</vector>
